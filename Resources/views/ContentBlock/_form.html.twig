{% form_theme form '@PositibeCore/FormThemes/mdb_form_theme_md.html.twig' %}

<div class="card-header white">
    <div class="card-title text-muted text-uppercase text-right">
        <div class="card-title-caption">
            <h4><i class="fa fa-cubes"></i> Formulario de bloque
            </h4>
        </div>
        <div class="card-title-actions">
            {% if content_block is defined and content_block.id is not null %}
                <a class="btn btn-warning btn-sm" data-toggle="modal" href="#positibe_content_block_remove">
                    <i class="fa fa-trash"></i> Remover
                </a>
            {% endif %}
            <a href="{{ path('positibe_block_index') }}"
               name="back" class="btn btn-sm btn-default"><i class="fa fa-angle-left"></i> Atras
            </a>
            <a href="{{ app.request.server.get('REQUEST_URI') }}" class="btn btn-default btn-sm"><i
                        class="fa fa-refresh"></i> Resetear
            </a>
            <button class="btn btn-sm btn-primary" type="submit"><i class="fa fa-check"></i> Guardar</button>

        </div>
    </div>
</div>


<div class="card-block">
    <div class="row">
        <div class="col-md-9">
            {% if isNew is defined and isNew %}
                {% if form.name is defined %}
                    {{ form_row(form.name) }}
                {% endif %}
            {% endif %}
            {{ form_row(form.title) }}
            {{ form_row(form.image) }}
            {{ form_widget(form.body) }}
        </div>
        <div class="col-md-3">
            {{ include('@PositibeCms/Block/_form_extra_configuration.html.twig') }}
        </div>
    </div>

</div>
<div class="card-footer text-right">
    <div class="card-block">
        <a href="{{ go_back('positibe_block_index', {'id': content_block.id}) }}"
           class="btn btn-default">Cancelar
        </a>
        <button class="btn btn-primary"><i class="fa fa-check"></i> Guardar</button>
    </div>
</div>