<li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
        <img src="{{ asset('img/flags/' ~ current_locale ~ '.png') }}"><span> {{ current_locale }} </span> <span class="caret"></span>
    </a>
    <ul class="dropdown-menu" role="menu" style="background-color: #191919;">
        {% for locale in locales %}
            {% if current_locale != locale.locale %}
                <li>
                    <a href="{{ locale.link }}"
                       title="{{ locale.locale_target_language }}"><img src="{{ asset('img/flags/' ~ locale.locale ~ '.png') }}"> {{ locale.locale_current_language }}</a>
                </li>
            {% endif %}
        {% endfor %}
    </ul>
</li>
