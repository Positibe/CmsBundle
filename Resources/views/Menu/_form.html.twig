<div class="card-header white">
    <div class="card-title text-muted text-uppercase text-right">
        <div class="card-title-caption">
            <h4><i class="fa fa-users"></i> Formulario de menus
            </h4>
        </div>
        <div class="card-title-actions">
            <a href="{{ go_back('positibe_menu_index') }}"
               name="back" class="btn btn-default btn-sm"><i class="fa fa-angle-left"></i> Atras
            </a>
            <a href="{{ app.request.server.get('REQUEST_URI') }}" class="btn btn-default btn-sm "><i
                        class="fa fa-reply"></i> Resetear
            </a>
            <button class="btn btn-primary btn-sm" type="submit"><i class="fa fa-check"></i> Guardar</button>
            {% if category is defined and category.id is not null %}
                <a class="btn red-haze" data-toggle="modal" href="#form_menu_remove">
                    <i class="fa fa-trash"></i> Remover
                </a>
            {% endif %}
        </div>
    </div>
</div>
<div class="card-block">
    {{ form_row(form.name) }}
    {{ form_row(form.childrenAttributes) }}
    {{ form_row(form.display) }}
    {{ form_row(form.displayChildren) }}
</div>
<div class="card-footer text-right">
    <div class="card-block">
        <a href="{{ go_back('positibe_menu_index') }}" class="btn btn-default">Cancelar</a>
        <button class="btn btn-primary"><i class="fa fa-check"></i> Guardar</button>
    </div>
</div>